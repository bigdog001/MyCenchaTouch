<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <Button
            android:id="@+id/preview_top_btn_record"
            android:layout_centerInParent="true"
            android:text="@string/home_tab_btn_top_record_start"
            android:background="@drawable/shape_recoed_btn"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <apps.bigdog.com.multicamera.view.widget.PercentView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            android:background="@color/red"
            android:padding="9dp"
            lee:percent_background_color="@color/gray"
            lee:percent_circle_gravity="bottom"
            lee:percent_circle_progress="30"
            lee:percent_circle_radius="10dp"
            lee:percent_progress_color="@color/colorPrimary" />


        <apps.bigdog.com.multicamera.view.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            lee:right_button_drawable="@drawable/titlebar_add_icon"
            lee:title_background_color="@color/green"
            lee:title_text="标题1" />

        <apps.bigdog.com.multicamera.view.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            lee:right_button_visible="false"
            lee:title_background_color="@color/green"
            lee:title_text="标题2" />

        <apps.bigdog.com.multicamera.view.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            lee:left_button_text="左边"
            lee:right_button_text="右边"
            lee:title_background_color="@color/red"
            lee:title_text="标题3" />

        <apps.bigdog.com.multicamera.view.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            lee:left_button_text="左边"
            lee:right_button_drawable="@drawable/titlebar_add_icon"
            lee:title_background_color="@color/red"
            lee:title_text="标题4" />

        <apps.bigdog.com.multicamera.view.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            lee:left_button_text="左边"
            lee:left_button_text_color="@color/red"
            lee:right_button_drawable="@drawable/titlebar_add_icon"
            lee:title_background_color="@color/blue"
            lee:title_text="标题5" />

        <apps.bigdog.com.multicamera.view.widget.CustomTitleBar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            lee:left_button_text="左边"
            lee:left_button_text_color="@color/red"
            lee:right_button_drawable="@drawable/titlebar_add_icon"
            lee:title_background_color="@color/blue"
            lee:title_text="标题6"
            lee:title_text_color="@color/black" />



</LinearLayout>